def calculadora(num1, num2, operacao):
  if operacao == 1:
    return num1 + num2
  elif operacao == 2:
      return num1 - num2
  elif operacao == 3:
        return num1 * num2
  elif operacao == 4:
          return num1 / num2
  elif operacao == 0:
            return ("sair")
num1 = float(input("digite um número"))
num2 = float(input("digite outro número"))
operacao = int(input("qual a operação matemática?(1-soma, 2-subtração, 3-multiplicação, 4-divisão)"))
resultado = calculadora(num1, num2, operacao)
print("resultado =",resultado)
